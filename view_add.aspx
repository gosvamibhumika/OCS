				<div class="cont_top"></div>
				<div id="content">
				<div style=" height:10px"></div>
				  <p align="center"><font size="+3" color="#993399">View Posted Advertise</font></p>
				  <p align="center">&nbsp;</p>
				  <div id="left">

					
                      <asp:GridView ID="GridView1" runat="server" Width="639px" AutoGenerateColumns="False" OnRowEditing="GridView1_RowEditing" OnRowUpdating="GridView1_RowUpdating" OnRowCancelingEdit="GridView1_RowCancelingEdit" OnRowDeleting="GridView1_RowDeleting" AutoGenerateDeleteButton="True" OnSelectedIndexChanged="GridView1_SelectedIndexChanged" OnSelectedIndexChanging="GridView1_SelectedIndexChanging" OnRowCommand="GridView1_RowCommand">
                          <Columns>
                                <asp:TemplateField HeaderText="Advertise ID">
                                    <ItemTemplate>
                                        <asp:Label ID="laid" runat="server" Text='<%#Eval("aid") %>'></asp:Label>
                                    </ItemTemplate>      
                                </asp:TemplateField>   

                               <asp:TemplateField HeaderText="Advertise Category">
                                    <ItemTemplate>
                                        <asp:Label ID="ad_cat" runat="server" Text='<%#Eval("ad_cat") %>'></asp:Label>
                                    </ItemTemplate>
                                    <EditItemTemplate>
                                     
                                        <asp:TextBox id="tcat" runat="server" Text='<%#Eval("ad_cat") %>'></asp:TextBox>
                                    </EditItemTemplate> 
                                </asp:TemplateField>   

                               <asp:TemplateField HeaderText="Advertise Description">
                                    <ItemTemplate>
                                        <asp:Label ID="ad_desc" runat="server" Text='<%#Eval("ad_desc") %>'></asp:Label>
                                    </ItemTemplate>
                                    <EditItemTemplate>
                                        <asp:TextBox id="tdesc" runat="server" Text='<%#Eval("ad_desc") %>'></asp:TextBox>
                                        
                                    </EditItemTemplate> 
                                </asp:TemplateField>   

                               <asp:TemplateField HeaderText="Date">
                                    <ItemTemplate>
                                        <asp:Label ID="dat" runat="server" Text='<%#Eval("dat") %>'></asp:Label>
                                    </ItemTemplate>
                                    <EditItemTemplate>
                                        <asp:TextBox id="tdate" runat="server" Text='<%#Eval("dat") %>'></asp:TextBox>
              
                                    </EditItemTemplate> 
                                </asp:TemplateField>  
                              
                               <asp:TemplateField HeaderText="Status">
                                    <ItemTemplate>
                                        <asp:Label ID="status" runat="server" Text='<%#Eval("status") %>'></asp:Label>
                                    </ItemTemplate>
                                    <EditItemTemplate>
                                        <asp:TextBox id="tstatus" runat="server" Text='<%#Eval("status") %>'></asp:TextBox>
                                    </EditItemTemplate> 
                                </asp:TemplateField> 
                                 <asp:TemplateField HeaderText="Actions">
                                    <ItemTemplate>
                                        <asp:LinkButton ID="select_a" runat="server" OnClick="select_a_Click" PostBackUrl='<%# "~/detail_ad.aspx?aid="+ Eval("aid") %>'> select </asp:LinkButton>
                                    </ItemTemplate>       
                                </asp:TemplateField> 
                                <asp:CommandField ShowEditButton="true" />
                    
                          </Columns>
                      </asp:GridView>

					
                      <br />

					
